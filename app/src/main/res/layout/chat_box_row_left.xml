<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="4dp"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagefromleft"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/by_defualt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textchatrowfromleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/white"
        android:maxWidth="245dp"
        android:padding="16dp"
        android:text="This is my message and its going to be a super long so
    i am writing it this like that"
        app:layout_constraintEnd_toStartOf="@+id/imagefromleft"
        app:layout_constraintTop_toTopOf="@+id/imagefromleft" />



</androidx.constraintlayout.widget.ConstraintLayout>